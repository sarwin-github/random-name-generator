 
<!doctype html>
<html>
<head>
  <title>List of People</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/bootstrap.css">
  <link rel="stylesheet" href="/css/font-awesome.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
  <script src="/js/jquery.js"></script>
  <script src="/js/jquery.min.js"></script>
  <script src="/js/bootstrap.js"></script>
    <style>
      html,body{
        overflow-x: hidden; 
      }
    </style>
</head>
<body>
  <div class="container-fluid" style="padding:0px;">
    <div class="container py-5">
      	<div class="row">
           	<div class="col-sm-12">
             	<div>
             		<h3>Edit the generated person <span class="pull-right" style="font-size: 15px;"><a href="/random/name/list">Back to list</a></span></h3><hr>
                <div class="col-sm-8  offset-2">
                  <form action="/random/name/edit/<%= person._id %>?_method=put" method="post">
                    <div class="form-group">
                      <label>Generated Random Name</label>
                      <input class="form-control" type="text" name="name" value="<%= person.name %>" required>
                    </div>

                    <div class="form-group">
                      <label>Generated Random Country</label>
                      <input class="form-control" type="text" name="country" value="<%= person.country %>" required>
                    </div>

                    <div class="form-group">
                      <label>Address</label>
                      <input class="form-control" type="text" name="address" value="<%= person.address %>" required>
                    </div>

                    <div class="form-group">
                      <label>Age</label>
                      <input class="form-control" type="number" name="age" value="<%= person.age %>" required>
                    </div>

                    <div class="form-group">
                      <label>Birthday</label>
                      <input class="form-control" type="date" name="birthday" value="<%= person.birthday %>" required>
                    </div>
                   
                    <div>
                      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                      <button type="submit" class="btn btn-warning">Edit person</button>
                    </div>
                  </form>
                </div>
             	</div>
           	</div>
        </div>
      </div>
    </div>
  </body>
</html>

